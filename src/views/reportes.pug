              td
                a.link-dark(href='mailto:' + reporte.Correo_Electronico role='button')
                  |#{reporte.Correo_Electronico}
              td
                a(href="/perfil-negocio/" + reporte.ID_Negocio).link-dark #{reporte.Nombre_Negocio}
              td
                p #{reporte.problema}
