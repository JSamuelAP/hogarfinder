include partials/head
header
  include partials/navbar
main.mt-5
  .container.text-center
    h1.fw-bold.mb-5 Editar datos
    .row.justify-content-center
      .col-10.col-sm-8.col-lg-6.col-xl-4
        form
          .mb-4
            label.form-label(for='input-nombre-cliente')
              | Nombre
            input#input-nombre-cliente.form-control(type='text' value='Nombre actual del cliente')
          .mb-4
            label.form-label(for='input-apellido-cliente')
              | Apellido
            input#input-apellido-cliente.form-control(type='text' value='Apellido actual del cliente')
          .mb-4
            label.form-label(for='input-correo-cliente')
              | Correo
            input#input-correo-cliente.form-control(type='email' value='correoactual@gmail.com')
          .mb-4
            label.form-label(for='input-foto-cliente')
              | Foto de perfil
            input#input-foto-cliente.form-control(type='file' accept='image/*')
          .mb-4
            label.form-label(for='input-nuevo-password')
              | Nueva contraseña
            input#input-nuevo-password.form-control(type='password')
          .mb-4
            label.form-label(for='input-confirmar-nuevo-password')
              | Confirmar nueva contraseña
            input#input-confirmar-nuevo-password.form-control(type='password' disabled)
          .mb-4
            label.form-label(for='input-password-actual')
              | Contraseña actual
            input#input-password-actual.form-control(type='password' disabled)
          button.btn.btn-info.btn-lg.text-white.px-5(type='submit')
            i.bi.bi-arrow-counterclockwise
            | &nbsp;Actualizar
include partials/footer
include partials/scripts